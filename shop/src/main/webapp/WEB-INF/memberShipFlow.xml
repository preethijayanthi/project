<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow
                          http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">
 
	<!-- Executed when webFlow is triggered -->
	<on-start>
	<!-- demohandler is java class available through annotated Demohandler.
	java class.here we are calling itâ€™s initFlow() method. -->
	  <evaluate expression="userHandler.initFlow()" result="flowScope.bs"/>
	  
	</on-start>
 
	 <!-- if not specified the first view state is the starting state -->
	<view-state id="start" view="billingdetails" model="flowScope.bs">
	   <transition on="submit" to="validate"/>
	</view-state>
 
	<action-state id="validate">  
		<evaluate expression="userHandler.validateDetails(bs,messageContext)"></evaluate>
		<transition on="success" to="confirmDetails" />
		<transition on="failure" to="start" />
	</action-state>
 
	<view-state id="confirmDetails" view="confirmDetails" model="flowScope.bs">
		<transition on="edit" to="start" />
		<transition on="submit" to="payment" />
	</view-state>
	<!-- <view-state id="payment" view="payment" model="flowScope.bs">
		<transition on="edit" to="confirmDetails" />
		<transition on="submit" to="welcome" />
	</view-state> -->
 
	<end-state id="payment" view="payment" />
	<end-state id="toHome" view="index" />
	<end-state id="toException" view="externalRedirect:contextRelative:exception.jsp" />
 
	<!-- these events are available in every state-->
	 <global-transitions>
		<transition on="home" to="toHome" />
		<transition on="error" to="toException" />
	</global-transitions> 
</flow>